<header>
  <h1 class="logo">
    {{#link-to "index"}}
      <span>LCBO API</span>
    {{/link-to}}
  </h1>

  <nav>
    <ol>
      {{#if session.isAuthenticated}}
        <li class="log-out">
          <a {{action "invalidateSession"}}>Log Out</a>
        </li>
      {{else}}
        <li class="log-in">
          {{#link-to "login"}}
            Log In
          {{/link-to}}
        </li>
      {{/if}}
    </ol>
  </nav>
</header>

<main>
  {{outlet}}
</main>

