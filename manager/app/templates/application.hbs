<header>
  <h1 class="logo">
    {{#link-to "index"}}
      <span>LCBO API</span>
    {{/link-to}}
  </h1>

  <nav>
    <ol>
      {{#if session.isAuthenticated}}
        <li {{bind-attr class=":account-menu-container showAccountMenu:open"}}>
          <a href="#" class="account-name" {{action "toggleAccountMenu"}}>
            {{session.account.name}} <i class="fa fa-chevron-down"></i>
          </a>
          <ul class="account-menu">
            <li class="settings">
              {{#link-to "account"}}
                Settings
              {{/link-to}}
            </li>
            <li class="log-out">
              <a href="#" {{action "invalidateSession"}}>Log Out</a>
            </li>
          </ul>
        </li>
      {{else}}
        <li class="log-in">
          {{#link-to "login"}}
            Log In
          {{/link-to}}
        </li>
        <li class="sign-up">
          {{#link-to "signup"}}
            Sign Up
          {{/link-to}}
        </li>
      {{/if}}
    </ol>
  </nav>
</header>

<main>
  {{outlet}}
</main>

<footer>
  <span class="banner">
    LCBO API &copy; 2009&ndash;{{unbound year}} Carsten Nielsen
  </span>
  <nav>
    <ol>
      {{#unless session.isAuthenticated}}
        <li>
          {{#link-to "signup"}}Sign Up{{/link-to}}
        </li>
        <li>
          {{#link-to "reset-password"}}Recover Password{{/link-to}}
        </li>
      {{/unless}}
      <li>
        <a href="/tos">Legal</a>
      </li>
      <li>
        <a href="/privacy">Privacy</a>
      </li>
      <li>
        {{link-to "Credits" "credits"}}
      </li>
      <li>
        <a href="mailto:help@lcboapi.com">Help</a>
      </li>
    </ol>
  </nav>
</footer>
