<header>
  <h1 class="logo">
    {{#link-to "index"}}
      <span>LCBO API</span>
    {{/link-to}}
  </h1>

  <nav>
    <ol>
      {{#if session.isAuthenticated}}
        <li class="account-menu-container">
          {{log session}}
          <span>{{session.account.name}}</span>
          <ul class="account-menu">
            <li class="log-out">
              <button {{action "invalidateSession"}}>Log Out</button>
            </li>
          </ul>
        </li>
      {{else}}
        <li class="log-in">
          {{#link-to "login"}}
            Log In
          {{/link-to}}
        </li>
        <li class="sign-up">
          {{#link-to "signup"}}
            Sign Up
          {{/link-to}}
        </li>
      {{/if}}
    </ol>
  </nav>
</header>

<main>
  {{outlet}}
</main>

<footer>
  LCBO API &copy; 2009&ndash;2014 Carsten Nielsen
</footer>
