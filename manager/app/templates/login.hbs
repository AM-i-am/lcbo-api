<header>
  <h1 class="logo">
    {{#link-to "index"}}
      <span>LCBO API</span>
    {{/link-to}}
  </h1>
</header>

<form {{action "authenticate" on="submit"}}>
  <h2 class="novis">Log In</h2>

  <div class="field email">
    <span class="input-group">
      <label for="email"><i class="fa fa-envelope-o"></i><span class="novis"> Email</span></label>
      {{input name="email" id="email" placeholder="Email" value=identification autofocus=true tabindex=1}}
    </span>
  </div>

  <div class="field password">
    <span class="input-group">
      <label for="password"><i class="fa fa-asterisk"></i><span class="novis"> Password</span></label>
      {{input name="password" id="password" placeholder="Password" type="password" value=password tabindex=2}}
    </span>
  </div>

  <div class="actions">
    <button type="submit" tabindex="3">
      <i class="fa fa-sign-in"></i> Log In
    </button>
  </div>
</form>

{{#if errorMessage}}
  <div class="error-msg">
    <i class="fa fa-exclamation-triangle"></i> {{errorMessage}}
  </div>
{{/if}}
